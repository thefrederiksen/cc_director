<Window x:Class="ConPtyTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConPTY Test" Width="1200" Height="800"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#E65100">
            <TextBlock Text="ConPTY Test App"
                       Foreground="White"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="16,0"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Dummy Left Panel -->
            <Border Grid.Column="0" Background="#252526">
                <StackPanel Margin="16">
                    <TextBlock Text="Left Panel (dummy)" Foreground="#666" Margin="0,0,0,16"/>
                    <TextBlock Text="Status:" Foreground="#999" Margin="0,0,0,4"/>
                    <TextBlock x:Name="StatusText" Text="Not Started" Foreground="#0D0"/>
                    <TextBlock Text="Process ID:" Foreground="#999" Margin="0,16,0,4"/>
                    <TextBlock x:Name="ProcessIdText" Text="-" Foreground="#CCC"/>
                </StackPanel>
            </Border>

            <!-- Terminal Area -->
            <Border Grid.Column="1" x:Name="TerminalContainer" Background="#0C0C0C">
                <!-- TerminalControl goes here -->
            </Border>
        </Grid>

        <!-- Bottom Bar -->
        <Border Grid.Row="2" Background="#333">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Click in terminal area to focus. Type to send input."
                           Foreground="#999" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" x:Name="DimensionsText" Text="120x30"
                           Foreground="#666" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
