<Window x:Class="ConPtyTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConPTY Test - Multi-Session" Width="1200" Height="800"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#E65100">
            <TextBlock Text="ConPTY Test App - Multi-Session"
                       Foreground="White"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="16,0"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Session Selector -->
            <Border Grid.Column="0" Background="#252526">
                <StackPanel Margin="16">
                    <TextBlock Text="Sessions" Foreground="#CCC" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>

                    <!-- Session 1 Button -->
                    <Border x:Name="Session1Border" Background="#3C3C3C" CornerRadius="4" Margin="0,0,0,8" Cursor="Hand"
                            MouseLeftButtonDown="Session1_Click">
                        <StackPanel Margin="12,8">
                            <TextBlock x:Name="Session1Title" Text="Session 1" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock x:Name="Session1Status" Text="Not Started" Foreground="#999" FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <!-- Session 2 Button -->
                    <Border x:Name="Session2Border" Background="#2D2D2D" CornerRadius="4" Margin="0,0,0,8" Cursor="Hand"
                            MouseLeftButtonDown="Session2_Click">
                        <StackPanel Margin="12,8">
                            <TextBlock x:Name="Session2Title" Text="Session 2" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock x:Name="Session2Status" Text="Not Started" Foreground="#999" FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <!-- Session 3 Button -->
                    <Border x:Name="Session3Border" Background="#2D2D2D" CornerRadius="4" Margin="0,0,0,8" Cursor="Hand"
                            MouseLeftButtonDown="Session3_Click">
                        <StackPanel Margin="12,8">
                            <TextBlock x:Name="Session3Title" Text="Session 3" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock x:Name="Session3Status" Text="Not Started" Foreground="#999" FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <Separator Background="#444" Margin="0,8,0,12"/>

                    <!-- Active Session Info -->
                    <TextBlock Text="Active Session" Foreground="#999" FontSize="11" Margin="0,0,0,4"/>
                    <TextBlock x:Name="ActiveSessionText" Text="Session 1" Foreground="#0D0" FontWeight="SemiBold"/>
                    <TextBlock Text="Process ID:" Foreground="#999" FontSize="11" Margin="0,12,0,4"/>
                    <TextBlock x:Name="ProcessIdText" Text="-" Foreground="#CCC"/>
                </StackPanel>
            </Border>

            <!-- Terminal Area - Contains all 3 terminals, only one visible -->
            <Border Grid.Column="1" x:Name="TerminalContainer" Background="#0C0C0C">
                <Grid x:Name="TerminalGrid">
                    <!-- TerminalControls added programmatically -->
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Bar with Input -->
        <Border Grid.Row="2" Background="#333">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="InputBox"
                         Grid.Column="0"
                         Background="#1E1E1E"
                         Foreground="#CCC"
                         BorderBrush="#555"
                         CaretBrush="#CCC"
                         Padding="8,6"
                         FontFamily="Consolas"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         KeyDown="InputBox_KeyDown"/>
                <Button x:Name="SendButton"
                        Grid.Column="1"
                        Content="Send"
                        Click="SendButton_Click"
                        Background="#E65100"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="16,6"
                        Margin="8,0"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>
                <TextBlock Grid.Column="2" x:Name="DimensionsText" Text="120x30"
                           Foreground="#666" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
