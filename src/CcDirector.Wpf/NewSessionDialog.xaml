<Window x:Class="CcDirector.Wpf.NewSessionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Session"
        Width="550" Height="450"
        MinWidth="400" MinHeight="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#252526">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Recent sessions section -->
        <TextBlock x:Name="RecentLabel" Grid.Row="0"
                   Text="Recent sessions:"
                   Foreground="#CCCCCC"
                   FontSize="14"
                   Margin="0,0,0,4" />

        <ListBox x:Name="RecentList" Grid.Row="1"
                 MaxHeight="130"
                 Background="#1E1E1E"
                 Foreground="#CCCCCC"
                 BorderBrush="#3C3C3C"
                 Margin="0,0,0,12"
                 SelectionChanged="RecentList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="4,2">
                        <TextBlock Text="{Binding CustomName}" FontWeight="Bold" />
                        <TextBlock Text="{Binding RepoPath}" FontSize="10" Opacity="0.5" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Repository list -->
        <TextBlock Grid.Row="2"
                   Text="Select a repository:"
                   Foreground="#CCCCCC"
                   FontSize="14"
                   Margin="0,0,0,8" />

        <ListBox x:Name="RepoList" Grid.Row="3"
                 Background="#1E1E1E"
                 Foreground="#CCCCCC"
                 BorderBrush="#3C3C3C"
                 SelectionChanged="RepoList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="4,2">
                        <TextBlock Text="{Binding Name}" FontWeight="Medium" />
                        <TextBlock Text="{Binding Path}" FontSize="10" Opacity="0.7" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="4" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="PathInput" Grid.Column="0"
                     Background="#1E1E1E"
                     Foreground="#CCCCCC"
                     BorderBrush="#3C3C3C"
                     Padding="4"
                     VerticalContentAlignment="Center" />
            <Button Grid.Column="1" Content="Browse..."
                    Click="BtnBrowse_Click"
                    Width="80" Margin="4,0,0,0"
                    Background="#3C3C3C"
                    Foreground="#CCCCCC"
                    BorderThickness="0"
                    Cursor="Hand" />
        </Grid>

        <StackPanel Grid.Row="5" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Create" Width="80"
                    Click="BtnCreate_Click"
                    Background="#007ACC" Foreground="White"
                    BorderThickness="0" Margin="0,0,8,0"
                    Cursor="Hand" />
            <Button Content="Cancel" Width="80"
                    Click="BtnCancel_Click"
                    Background="#3C3C3C" Foreground="#CCCCCC"
                    BorderThickness="0"
                    Cursor="Hand" />
        </StackPanel>
    </Grid>
</Window>
