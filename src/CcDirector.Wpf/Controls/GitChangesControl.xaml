<UserControl x:Class="CcDirector.Wpf.Controls.GitChangesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CcDirector.Wpf.Controls"
             Background="#1E1E1E">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <!-- Folder node template -->
        <HierarchicalDataTemplate DataType="{x:Type local:GitFolderNode}"
                                   ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding DisplayName}"
                       Foreground="#CCCCCC" FontSize="12" />
        </HierarchicalDataTemplate>

        <!-- File leaf node template -->
        <DataTemplate DataType="{x:Type local:GitFileLeafNode}">
            <DockPanel>
                <TextBlock DockPanel.Dock="Right"
                           Text="{Binding StatusChar}"
                           Foreground="{Binding StatusBrush}"
                           FontFamily="Cascadia Mono, Consolas"
                           FontSize="12" FontWeight="Bold"
                           Margin="8,0,4,0" VerticalAlignment="Center" />
                <TextBlock Text="{Binding DisplayName}"
                           Foreground="#CCCCCC" FontSize="12"
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding FolderPath}"
                           Foreground="#666666" FontSize="10"
                           Margin="8,0,0,0" VerticalAlignment="Center" />
            </DockPanel>
        </DataTemplate>

        <!-- TreeViewItem expand/collapse toggle -->
        <Style x:Key="TreeExpandToggle" TargetType="ToggleButton">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Width="16" Height="16">
                            <Path x:Name="Arrow"
                                  Data="M 0,0 L 5,4 L 0,8 Z"
                                  Fill="#888888"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="0" />
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="90" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TreeViewItem style -->
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel>
                            <Border Padding="2,1" SnapsToDevicePixels="True">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A2D2E" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="Expander" Grid.Column="0"
                                                  Style="{StaticResource TreeExpandToggle}"
                                                  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Visibility="Hidden" />
                                    <ContentPresenter x:Name="PART_Header" Grid.Column="1"
                                                      ContentSource="Header"
                                                      HorizontalAlignment="Stretch" />
                                </Grid>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Margin="16,0,0,0" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="True">
                                <Setter TargetName="Expander" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section header toggle style -->
        <Style x:Key="SectionToggle" TargetType="ToggleButton">
            <Setter Property="IsChecked" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Padding="4,4">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2A2D2E" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <DockPanel>
                                <Path x:Name="Arrow" DockPanel.Dock="Left"
                                      Data="M 0,0 L 5,4 L 0,8 Z"
                                      Fill="#CCCCCC" Margin="0,0,6,0"
                                      VerticalAlignment="Center"
                                      RenderTransformOrigin="0.5,0.5">
                                    <Path.RenderTransform>
                                        <RotateTransform Angle="90" />
                                    </Path.RenderTransform>
                                </Path>
                                <ContentPresenter VerticalAlignment="Center" />
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="0" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <TextBlock DockPanel.Dock="Top"
                   Text="SOURCE CONTROL"
                   Foreground="#CCCCCC"
                   FontWeight="SemiBold"
                   FontSize="12"
                   Margin="12,12,12,8" />

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="4,0">

                <!-- Staged Changes section -->
                <StackPanel x:Name="StagedSection" Visibility="Collapsed">
                    <ToggleButton x:Name="StagedToggle" IsChecked="True"
                                  Style="{StaticResource SectionToggle}">
                        <DockPanel>
                            <TextBlock Text="Staged Changes"
                                       Foreground="#CCCCCC"
                                       FontWeight="SemiBold" FontSize="11" />
                            <Border CornerRadius="8" Background="#404040"
                                    Padding="6,1" Margin="8,0,0,0"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="StagedBadge"
                                           Foreground="#CCCCCC"
                                           FontSize="10" FontWeight="SemiBold" />
                            </Border>
                        </DockPanel>
                    </ToggleButton>
                    <TreeView x:Name="StagedTree"
                              Background="Transparent" BorderThickness="0"
                              Padding="0" Margin="4,0,0,0"
                              Visibility="{Binding IsChecked, ElementName=StagedToggle,
                                           Converter={StaticResource BoolToVis}}" />
                </StackPanel>

                <!-- Changes section -->
                <StackPanel Margin="0,4,0,0">
                    <ToggleButton x:Name="ChangesToggle" IsChecked="True"
                                  Style="{StaticResource SectionToggle}">
                        <DockPanel>
                            <TextBlock Text="Changes"
                                       Foreground="#CCCCCC"
                                       FontWeight="SemiBold" FontSize="11" />
                            <Border CornerRadius="8" Background="#404040"
                                    Padding="6,1" Margin="8,0,0,0"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="ChangesBadge"
                                           Foreground="#CCCCCC"
                                           FontSize="10" FontWeight="SemiBold" />
                            </Border>
                        </DockPanel>
                    </ToggleButton>
                    <TreeView x:Name="ChangesTree"
                              Background="Transparent" BorderThickness="0"
                              Padding="0" Margin="4,0,0,0"
                              Visibility="{Binding IsChecked, ElementName=ChangesToggle,
                                           Converter={StaticResource BoolToVis}}" />
                </StackPanel>

                <!-- Empty state -->
                <TextBlock x:Name="EmptyText"
                           Text="No changes detected"
                           Foreground="#555555"
                           FontSize="12"
                           Margin="8,12,0,0"
                           Visibility="Visible" />
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
