<UserControl x:Class="CcDirector.Wpf.Controls.GitChangesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CcDirector.Wpf.Controls"
             Background="#1E1E1E">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <!-- Folder node template -->
        <HierarchicalDataTemplate DataType="{x:Type local:GitFolderNode}"
                                   ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding DisplayName}"
                       Foreground="#CCCCCC" FontSize="12" />
        </HierarchicalDataTemplate>

        <!-- File leaf node template -->
        <DataTemplate DataType="{x:Type local:GitFileLeafNode}">
            <Border Background="Transparent"
                    MouseLeftButtonDown="FileNode_MouseLeftButtonDown">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Open in VS Code"
                                  Click="FileNode_OpenInVsCode_Click" />
                        <MenuItem Header="Copy Path"
                                  Click="FileNode_CopyFullPath_Click" />
                        <MenuItem Header="Copy Relative Path"
                                  Click="FileNode_CopyRelativePath_Click" />
                    </ContextMenu>
                </Border.ContextMenu>
                <DockPanel>
                    <TextBlock DockPanel.Dock="Right"
                               Text="{Binding StatusChar}"
                               Foreground="{Binding StatusBrush}"
                               FontFamily="Cascadia Mono, Consolas"
                               FontSize="12" FontWeight="Bold"
                               Margin="8,0,4,0" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding DisplayName}"
                               Foreground="#CCCCCC" FontSize="12"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{Binding FolderPath}"
                               Foreground="#666666" FontSize="10"
                               Margin="8,0,0,0" VerticalAlignment="Center" />
                </DockPanel>
            </Border>
        </DataTemplate>

        <!-- TreeViewItem expand/collapse toggle -->
        <Style x:Key="TreeExpandToggle" TargetType="ToggleButton">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Width="16" Height="16">
                            <Path x:Name="Arrow"
                                  Data="M 0,0 L 5,4 L 0,8 Z"
                                  Fill="#888888"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="0" />
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="90" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TreeViewItem style -->
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel>
                            <Border Padding="2,1" SnapsToDevicePixels="True">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A2D2E" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="Expander" Grid.Column="0"
                                                  Style="{StaticResource TreeExpandToggle}"
                                                  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Visibility="Hidden" />
                                    <ContentPresenter x:Name="PART_Header" Grid.Column="1"
                                                      ContentSource="Header"
                                                      HorizontalAlignment="Stretch" />
                                </Grid>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Margin="16,0,0,0" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="True">
                                <Setter TargetName="Expander" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section header toggle style -->
        <Style x:Key="SectionToggle" TargetType="ToggleButton">
            <Setter Property="IsChecked" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Padding="4,4">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2A2D2E" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <DockPanel>
                                <Path x:Name="Arrow" DockPanel.Dock="Left"
                                      Data="M 0,0 L 5,4 L 0,8 Z"
                                      Fill="#CCCCCC" Margin="0,0,6,0"
                                      VerticalAlignment="Center"
                                      RenderTransformOrigin="0.5,0.5">
                                    <Path.RenderTransform>
                                        <RotateTransform Angle="90" />
                                    </Path.RenderTransform>
                                </Path>
                                <ContentPresenter VerticalAlignment="Center" />
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="0" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <TextBlock DockPanel.Dock="Top"
                   Text="SOURCE CONTROL"
                   Foreground="#CCCCCC"
                   FontWeight="SemiBold"
                   FontSize="12"
                   Margin="12,12,12,8" />

        <!-- Branch & sync status bar -->
        <Border x:Name="BranchBar" DockPanel.Dock="Top"
                Background="#252526" CornerRadius="3"
                Padding="8,4" Margin="8,0,8,6"
                Visibility="Collapsed">
            <DockPanel>
                <!-- Right-side badges -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <!-- No upstream hint -->
                    <TextBlock x:Name="NoUpstreamText"
                               Text="no upstream"
                               Foreground="#888888" FontSize="10"
                               VerticalAlignment="Center" Margin="6,0,0,0"
                               Visibility="Collapsed" />

                    <!-- Ahead badge (green) -->
                    <Border x:Name="AheadBadge" CornerRadius="3"
                            Background="#1B3A2A" Padding="4,1" Margin="6,0,0,0"
                            VerticalAlignment="Center" Visibility="Collapsed">
                        <TextBlock x:Name="AheadText"
                                   Foreground="#22C55E" FontSize="10"
                                   FontFamily="Cascadia Mono, Consolas" />
                    </Border>

                    <!-- Behind badge (orange) -->
                    <Border x:Name="BehindBadge" CornerRadius="3"
                            Background="#3A2A1B" Padding="4,1" Margin="4,0,0,0"
                            VerticalAlignment="Center" Visibility="Collapsed">
                        <TextBlock x:Name="BehindText"
                                   Foreground="#F59E0B" FontSize="10"
                                   FontFamily="Cascadia Mono, Consolas" />
                    </Border>

                    <!-- Behind main badge (blue) -->
                    <Border x:Name="BehindMainBadge" CornerRadius="3"
                            Background="#1B2A3A" Padding="4,1" Margin="4,0,0,0"
                            VerticalAlignment="Center" Visibility="Collapsed">
                        <TextBlock x:Name="BehindMainText"
                                   Foreground="#3B82F6" FontSize="10"
                                   FontFamily="Cascadia Mono, Consolas" />
                    </Border>
                </StackPanel>

                <!-- Left side: branch icon + name -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="M7,3 C7,1.9 7.9,1 9,1 C10.1,1 11,1.9 11,3 C11,3.7 10.6,4.4 10,4.7 L10,7 L12,9 L12,11.3 C12.6,11.6 13,12.3 13,13 C13,14.1 12.1,15 11,15 C9.9,15 9,14.1 9,13 C9,12.3 9.4,11.6 10,11.3 L10,9.4 L8,7.4 L6,9.4 L6,11.3 C6.6,11.6 7,12.3 7,13 C7,14.1 6.1,15 5,15 C3.9,15 3,14.1 3,13 C3,12.3 3.4,11.6 4,11.3 L4,4.7 C3.4,4.4 3,3.7 3,3 C3,1.9 3.9,1 5,1 C6.1,1 7,1.9 7,3 Z M5,2.5 C4.7,2.5 4.5,2.7 4.5,3 C4.5,3.3 4.7,3.5 5,3.5 C5.3,3.5 5.5,3.3 5.5,3 C5.5,2.7 5.3,2.5 5,2.5 Z M9.5,3 C9.5,2.7 9.3,2.5 9,2.5 C8.7,2.5 8.5,2.7 8.5,3 C8.5,3.3 8.7,3.5 9,3.5 C9.3,3.5 9.5,3.3 9.5,3 Z M5,12.5 C4.7,12.5 4.5,12.7 4.5,13 C4.5,13.3 4.7,13.5 5,13.5 C5.3,13.5 5.5,13.3 5.5,13 C5.5,12.7 5.3,12.5 5,12.5 Z M11,12.5 C10.7,12.5 10.5,12.7 10.5,13 C10.5,13.3 10.7,13.5 11,13.5 C11.3,13.5 11.5,13.3 11.5,13 C11.5,12.7 11.3,12.5 11,12.5 Z"
                          Fill="#888888" Width="14" Height="14"
                          Stretch="Uniform" VerticalAlignment="Center"
                          Margin="0,0,6,0" />
                    <TextBlock x:Name="BranchNameText"
                               Foreground="#CCCCCC" FontSize="11"
                               VerticalAlignment="Center" />
                </StackPanel>
            </DockPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="4,0">

                <!-- Staged Changes section -->
                <StackPanel x:Name="StagedSection" Visibility="Collapsed">
                    <ToggleButton x:Name="StagedToggle" IsChecked="True"
                                  Style="{StaticResource SectionToggle}">
                        <DockPanel>
                            <TextBlock Text="Staged Changes"
                                       Foreground="#CCCCCC"
                                       FontWeight="SemiBold" FontSize="11" />
                            <Border CornerRadius="8" Background="#404040"
                                    Padding="6,1" Margin="8,0,0,0"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="StagedBadge"
                                           Foreground="#CCCCCC"
                                           FontSize="10" FontWeight="SemiBold" />
                            </Border>
                        </DockPanel>
                    </ToggleButton>
                    <TreeView x:Name="StagedTree"
                              Background="Transparent" BorderThickness="0"
                              Padding="0" Margin="4,0,0,0"
                              Visibility="{Binding IsChecked, ElementName=StagedToggle,
                                           Converter={StaticResource BoolToVis}}" />
                </StackPanel>

                <!-- Changes section -->
                <StackPanel Margin="0,4,0,0">
                    <ToggleButton x:Name="ChangesToggle" IsChecked="True"
                                  Style="{StaticResource SectionToggle}">
                        <DockPanel>
                            <TextBlock Text="Changes"
                                       Foreground="#CCCCCC"
                                       FontWeight="SemiBold" FontSize="11" />
                            <Border CornerRadius="8" Background="#404040"
                                    Padding="6,1" Margin="8,0,0,0"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="ChangesBadge"
                                           Foreground="#CCCCCC"
                                           FontSize="10" FontWeight="SemiBold" />
                            </Border>
                        </DockPanel>
                    </ToggleButton>
                    <TreeView x:Name="ChangesTree"
                              Background="Transparent" BorderThickness="0"
                              Padding="0" Margin="4,0,0,0"
                              Visibility="{Binding IsChecked, ElementName=ChangesToggle,
                                           Converter={StaticResource BoolToVis}}" />
                </StackPanel>

                <!-- Empty state -->
                <TextBlock x:Name="EmptyText"
                           Text="No changes detected"
                           Foreground="#555555"
                           FontSize="12"
                           Margin="8,12,0,0"
                           Visibility="Visible" />
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
